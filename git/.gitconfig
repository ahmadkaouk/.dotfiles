[core]
	autocrlf = input

[color]
	ui = auto

[core]
    pager = delta

[delta]
    plus-color = "#012800"
    minus-color = "#340001"
    side-by-side = true
    syntax-theme = Monokai Extended

[interactive]
    diffFilter = delta --color-only

[merge]
    tool = meld

[mergetool "meld"]
    # Choose one of these 2 lines (not both!) explained below.
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
    cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"
